<section class="p-2">
    <div>
        {{#with newsData}}
        <img src="{{photo}}" class="card-img-top" alt="Photo">
        <div>
            {{#with head}}
            <h3 class="text-center">{{heading}}</h3>
            <p>{{description}}</p>
            {{/with}}
        </div>
        <div>
            {{#each body}}
            <ul>
                <h4>{{title}}</h4>
                <p>{{text}}</p>
            </ul>
            {{/each}}
        </div>
        {{/with}}
    </div>
    <br />
    <hr>

    <div>
        {{#with newsOtherBlock}}
        <p class="display-6 text-center">{{title}}</p>
        <div class="row">
            {{#each cards}}
            {{> shoppost}}
            {{/each}}
        </div>
        {{/with}}
    </div>
</section>
<br />
<hr>