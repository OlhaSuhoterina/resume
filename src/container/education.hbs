<div>
    {{#with main}}
    <main>
        <section>
            {{> title data="My Education" big=true}}

            <ul>
                {{#each education}}
                <li>
                    {{name}}
                    {{#unless isEnd}} (ще в процесі) {{/unless}}

                </li>
                {{/each}}
            </ul>
        </section>
        <section>
            {{> title data="My certificates" big=false}}
            <ul>
                {{#each certificates}}
                <li>
                    {{name}}
                    ({{id}})
                </li>
                {{/each}}

        </section>
    </main>
    {{/with}}
</div>