<div class="p-2">
    <div>
        <h2>{{header}}</h2>
    </div>
    <br />

    <div class="col-12">
        <div class="row">
            {{#each sortBlock}}
            <div class="col-4">
                <label class="form-label"></label>
                <select class="select-form m-2 p-1">
                    <option selected>{{placeholder}}</option>
                    {{#each options}}
                    <option>{{value}}. {{text}}</option>
                    {{/each}}
                </select>
            </div>
            {{/each}}
        </div>
    </div>
    <div class="col-12">
        <div class="row">
            {{#with filterBlock}}
            <div class="col-4">
                <div class="card p-2">
                    {{#with sellers}}
                    <p>{{title}}</p>
                    {{#each list}}
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox">
                        <label class="form-check-label">
                            {{value}}
                        </label>
                    </div>
                    {{/each}}
                    {{/with}}
                    <hr>
                    <div>
                        {{#with brands}}
                        {{title}}
                        <div>
                            {{#with input}}
                            <label class="form-label "></label>
                            <input class="form-control" type="text" placeholder="{{placeholder}}">
                            {{/with}}
                            <br />
                            {{#each options}}
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox">
                                <label class="form-check-label">
                                    {{value}}
                                </label>
                            </div>
                            {{/each}}
                        </div>
                        {{/with}}
                    </div>
                    <div class="p-2">
                        {{#with price}}
                        <div class="row">
                            {{#with range}}
                            <div class="col-4">
                                <label class="form-label "></label>
                                <input class="form-control form-control-sm" type="text-sm" placeholder="{{from}}">
                            </div>
                            <div class="col-5">
                                <label class="form-label form-sm"></label>
                                <input class="form-control form-control-sm" type="text" placeholder="{{to}}">
                            </div>
                            {{/with}}
                            <div class="col-2">
                                <button type="button" class="btn btn-primary btn-sm mt-4 me-5"
                                    onclick="window.location.href=`{{button.link}}`">{{button.text}}
                                </button>
                            </div>
                        </div>
                        {{/with}}
                    </div>
                    <hr>
                    <div class="p-2">
                        {{#each filterList}}
                        <p>{{title}}</p>
                        {{#each options}}
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox">
                            <label class="form-check-label">
                                {{value}}
                            </label>
                        </div>
                        {{/each}}
                        <hr>
                        {{/each}}
                    </div>
                </div>
            </div>
            {{/with}}
            <div class="col-8">
                <div class="row">
                    {{#each goodsList}}
                    <div class="col-6">
                        {{> catalogItem}}
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
    <br />
    <br />
</div>