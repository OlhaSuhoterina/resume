<div class="">
    <div class="col-12">
        {{#with formBlock}}
        <div class="row">
            <div class="col-8">
                <h3>{{header}}</h3>
                <p>{{rating.title}} {{rating.value}}</p>
                <div>
                    {{#with actionBlock}}
                    <ul class="nav nav-tabs">
                        {{#each tabs}}
                        <li class="nav-item">
                            {{#if isActive}}<a class="nav-link active" aria-current="page" href="#">{{text}}</a>
                            {{else}}
                            <a class="nav-link" aria-current="page" href="#">{{text}}</a>{{/if}}
                        </li>
                        {{/each}}
                    </ul>
                    <br />
                    <br />
                    <div>
                        {{#with field}}
                        <div class="card">
                            <div class="row">
                                <div class="col-8 pt-12 pe-1">
                                    <label class="form-label "></label>
                                    <input class="form-control" type="text" placeholder="{{placeholder}}">
                                </div>
                                <div class="col-4 pt-4 pb-4 px-1">
                                    <a href="{{button.link}}" class="btn btn-secondary">{{button.text}}</a>
                                </div>
                            </div>
                        </div>
                        {{/with}}
                    </div>
                    {{/with}}
                </div>
                <br />
                <br />
                <hr>
                <div>
                    {{#with feedbackBlock}}
                    <br />
                    <br />
                    <h2>{{title}}</h2>
                    <br />
                    <br />
                    <div class="m-1">
                        {{#each buttons}}
                        {{#if isWarning}}<a href="{{link}}" class="btn btn-warning">{{text}}</a>{{/if}}
                        {{#if isSuccess}}<a href="{{link}}" class="btn btn-success">{{text}}</a>{{/if}}
                        {{#if isDanger}}<a href="{{link}}" class="btn btn-danger">{{text}}</a>{{/if}}
                        {{/each}}
                    </div>
                    <br />
                    <br />
                    <br />
                    {{/with}}
                </div>
            </div>
            <div class="col-4">
                {{#with goodsInfo}}
                <div class="card mb-3">
                    <img src="{{photo}}" class="card-img m-3" alt="Photo" style="width: 150px; height:150px">
                    <b class="p-2">{{name}}</b>
                </div>
                <div class="card">
                    <b class="p-3">{{price}}</b>
                    <div class="p-3">
                        {{#each buttons}}
                        {{#if isPrimary}}<a href="{{link}}" class="btn btn-primary mb-3">{{text}}</a>{{/if}}
                        {{#if isSecondary}}<a href="{{link}}" class="btn btn-secondary">{{text}}</a>{{/if}}
                        {{/each}}
                    </div>
                </div>
                <div>
                    {{#with seller}}
                    <label class="form-label "></label>
                    <input class="form-control" type="text" placeholder="{{title}}: {{value}}">
                    {{/with}}
                </div>
                {{/with}}
            </div>
        </div>
        {{/with}}
        <br />
        {{> reviewItem}}
    </div>

</div>