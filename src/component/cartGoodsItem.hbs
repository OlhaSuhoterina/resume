<div class="col-12">
    {{#each goodsBlock}}
    <div class="card m-3">
        <div class="row">
            <div class="col-2 p-3">
                <img src="{{image}}" class="card-img-top" alt="photo" style="width: 100px; height:100px">
            </div>
            <div class="col-4">
                <b class="">{{name}}</b>
                <p>{{description}}</p>
            </div>
            <div class="col-2 pt-5">
                {{price.title}}: <br />
                <b>{{price.value}}</b>
            </div>
            <div class="col-2 pt-5">
                {{amount}}
            </div>
            <div class="col-2 pt-4 px-2">
                {{#each buttons}}
                {{#if isPrimary}}<button type="button" class="btn btn-primary mb-3">{{text}}</button>{{/if}}
                {{#if isDanger}}<button type="button" class="btn btn-outline-danger ">{{text}}</button>{{/if}}
                {{/each}}
            </div>
        </div>
    </div>
    {{/each}}
</div>